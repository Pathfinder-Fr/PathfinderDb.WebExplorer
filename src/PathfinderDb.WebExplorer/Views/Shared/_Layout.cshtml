<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pathfinder-Fr Db Browser</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body data-spy="scroll" data-target=".sidebar">
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">

                <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <!-- Be sure to leave the brand out there if you want it shown -->
                <a class="brand" href="/"><span>Pathfinder-Fr Db</span></a>

                <!-- Everything you want hidden at 940px or less, place within here -->
                <div class="nav-collapse">
                    <!-- .nav, .navbar-search, .navbar-form, etc -->
                    <ul class="nav">
                        <li class="@(this.ViewContext.Controller.GetType().Name == "FeatController" ? "active" : "")">@Html.ActionLink("Dons", "Index", "Feat")
                        </li>
                        <li class="@(this.ViewContext.Controller.GetType().Name == "SpellController" ? "active" : "")">@Html.ActionLink("Sorts", "Index", "Spell")
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
    @if (this.IsSectionDefined("Sidebar"))
    {
        <div class="container">
            <div class="row">
                <div class="span3 sidebar">
                    @RenderSection("Sidebar", false)
                </div>
                <div class="span9">
                    @RenderBody()
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            @RenderBody()
        </div>
    }
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
    <footer class="footer">
        <div class="container">
            <p class="pull-right"><a href="#">Retour en haut</a></p>
            @{ var ds = MemoryDataSet.DataSets; }
            @*<p>@ds.Count sources chargées</p>*@
        </div>
    </footer>
</body>
</html>
